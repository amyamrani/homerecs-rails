<%= form_with model: product, class: 'form' do |form| %>
  <div class='form-group'>
    <%= form.label :category %><br>
    <%= form.select :category, Product::CATEGORIES, :include_blank => "Select" %>
  </div>

  <div class='form-group'>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% product.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class='form-group'>
    <%= form.label :url %><br>
    <%= form.text_field :url %>
    <% product.errors.full_messages_for(:url).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class='form-group'>
    <%= form.label :comments %><br>
    <%= form.text_area :comments %>
    <% product.errors.full_messages_for(:comments).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class='form-actions'>
    <%= link_to "Cancel", dashboard_path, class: 'button' %>
    <%= form.submit "Save", class: 'button button-primary' %>
  </div>
<% end %>
