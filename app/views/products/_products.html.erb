<ul>
  <% products.each do |product| %>
    <li>
      <div>
        <%= product.name %>
      </div>
      <div>
        <%= product.url %>
      </div>
      <div>
        <%= product.comments %>
      </div>
      <div>
        <%= product.category %>
      </div>
      <div>
        <%= link_to "Edit", edit_product_path(product) %>
      </div>

      <div>
        <%= link_to 'Delete', product_path(product),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </div>
    </li>
  <% end %>
</ul>