<div class='page-container'>
  <div>
    <h1 class='section-title'>Join Group</h1>
  </div>

  <%= form_with model: current_user, class: 'form' do |form| %>
    <div class='form-group'>
      <%= form.label :code %><br>
      <%= form.text_field :code %>
    </div>

    <div class='form-buttons'>
      <%= link_to 'Cancel', dashboard_path, class: 'button' %>
      <%= form.submit 'Save', class: 'button button-primary' %>
    </div>
  <% end %>
</div>
